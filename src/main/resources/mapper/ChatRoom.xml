<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.besp.likebesp1.ChatRoom.repository.ChatRoomDao">
    <insert id="insertChatRoom" parameterType="com.besp.likebesp1.ChatRoom.dto.ChatRoomDto">
        INSERT INTO chat_room (name)
        VALUES (#{name})
    </insert>

    <select id="selectAllChatRooms" resultType="com.besp.likebesp1.ChatRoom.dto.ChatRoomDto">
        SELECT * FROM chat_room
    </select>
</mapper>